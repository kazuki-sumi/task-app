<div class="row">
  <% @article_files.each do |article_file| %>
    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
      <div class="card card-blog card-plain">
        <div class="card-header p-0 mt-n4 mx-3">
          <a class="d-block shadow-xl border-radius-xl">
            <img src=<%= article_file.file %> alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
          </a>
        </div>
        <div class="card-body p-3">
          <p class="mb-0 text-sm">Project #2</p>
          <a href="javascript:;">
            <h5>
              <%= article_file.name %>
            </h5>
          </a>
          <p class="mb-4 text-sm">
            As Uber works through a huge amount of internal management turmoil.
          </p>
          <div class="ms-auto text-end">
            <% #TODO: link_toを使って修正 %>
            <%= button_to admin_article_file_path(article_file), method: :delete, data: { confirm: "このファイルを削除します。よろしいですか？" }, class: "btn btn-danger px-3 mb-0" do %>
              <i class="cil-trash text-sm me-2">削除</i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @article_files %>
