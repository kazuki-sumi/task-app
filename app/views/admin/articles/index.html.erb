<div class="card">
  <div class="card-header">
    <h4>記事一覧</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead class="text-primary">
          <th><%= Article.human_attribute_name(:id) %></th>
          <th><%= Article.human_attribute_name(:title) %></th>
          <th><%= Article.human_attribute_name(:status) %></th>
          <th><%= Article.human_attribute_name(:published_at) %></th>
          <th><%= Article.human_attribute_name(:important) %></th>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.id %></td>
              <td><%= article.title %></td>
              <td><%= article.status.text %></td>
              <td><%= article.published_at %></td>
              <td><%= article.important ? "◯" : "✖️" %></td>
            </td>
          <% end %>
        </tbody>
      </table>

      <%= paginate @articles %>
    </div>
  </div>
</div>